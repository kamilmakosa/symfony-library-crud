<nav aria-label="Pagination">
    <ul class="pagination">
    {% if currentPage > 1 %}
        <li class="page-item"><a class="page-link" href="{{ path(targetPath, {'page': currentPage-1 , 'limit': limit}) }}">Previous</a></li>
    {% else %}
        <li class="page-item disabled"><a class="page-link">Previous</a></li>
    {% endif %}
    {% if currentPage-2 >= 1 %}
        <li class="page-item"><a class="page-link" href="{{ path(targetPath, {'page': currentPage-2 , 'limit': limit}) }}">{{ page-2 }}</a></li>
    {% endif %}
    {% if currentPage-1 >= 1 %}
        <li class="page-item"><a class="page-link" href="{{ path(targetPath, {'page': currentPage-1 , 'limit': limit}) }}">{{ page-1 }}</a></li>
    {% endif %}
    <li class="page-item active"><a class="page-link" href="{{ path(targetPath, {'page': currentPage , 'limit': limit}) }}">{{ page }}</a></li>
    {% if currentPage+1 <= totalPage %}
        <li class="page-item"><a class="page-link" href="{{ path(targetPath, {'page': currentPage+1 , 'limit': limit}) }}">{{ page+1 }}</a></li>
    {% endif %}
    {% if currentPage+2 <= totalPage %}
        <li class="page-item"><a class="page-link" href="{{ path(targetPath, {'page': currentPage+2 , 'limit': limit}) }}">{{ page+2 }}</a></li>
    {% endif %}
    {% if currentPage < totalPage %}
        <li class="page-item"><a class="page-link" href="{{ path(targetPath, {'page': currentPage+1 , 'limit': limit}) }}">Next</a></li>
    {% else %}
        <li class="page-item disabled"><a class="page-link">Next</a></li>
    {% endif %}
    </ul>
</nav>
