{% extends 'base.html.twig' %}

{% block title %}Edit book - {% endblock %}

{% block body %}
    <div class="form-container">
        <h4 class="mb-4">Edit book: {{ book.title }}</h4>
        <div class="row">
            <div class="col-12 col-sm-8 col-md-6 col-xl-3">
            <form enctype="multipart/form-data" method="POST">
                <div class="mb-3">
                    <label for="book_title" class="form-label">Title</label>
                    <input type="text" id="book_title" name="book[title]" value="{{ book.title }}" required="required" maxlength="255" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="book_year" class="form-label">Year of publishment</label>
                    <input type="number" id="book_year" name="book[year]" value="{{ book.year }}" required="required" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="book_ISBN" class="form-label">ISBN</label>
                    <input type="text" id="book_ISBN" name="book[ISBN]" value="{{ book.ISBN }}" required="required" maxlength="255" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="book_author_id" class="form-label">Author(s)</label>
                    <select id="book_author_id" name="book[author_id]" required="required" class="form-control">
                        {% for author in authors %}
                            {% if author.id == book.authorId %}
                                <option selected value="{{author.id}}">{{ author.first_name }} {{ author.last_name }}</option>
                            {% else %}
                                <option value="{{author.id}}">{{ author.first_name }} {{ author.last_name }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <button onclick="location.href = '{{ path('books') }}';" type="button" class="btn btn-primary">Back to list</button>
                    <button type="submit" class="btn btn-success">Save changes</button>
                </div>
            </form>
            </div>
        </div>
    </div>
{% endblock %}
